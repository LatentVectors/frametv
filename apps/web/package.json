  "private": true,
  "scripts": {
    "dev": "concurrently -n \"web,sync\" -c \"blue,green\" \"next dev\" \"cd ../sync-service && .venv/bin/python src/main.py\"",
    "dev:web": "next dev",
    "dev:sync": "cd ../sync-service && .venv/bin/python src/main.py",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "MOCK_TV=true MOCK_TV_SCENARIO=success_with_pin playwright test",
    "test:e2e:ui": "MOCK_TV=true MOCK_TV_SCENARIO=success_with_pin playwright test --ui"
  },
